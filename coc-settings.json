{
  "coc.preferences.formatOnSave": true,

  // Eslint
  "eslint.autoFixOnSave": false,
  "eslint.packageManager": "yarn",
  "workspace.bottomUpFiletypes": ["javascript", "typescript"],
  "workspace.workspaceFolderCheckCwd": false,

  // Volar
  "volar.takeOverMode.enabled": true,
  "volar.autoCompleteRefs": true,
  "volar.completion.preferredTagNameCase": "pascal",
  "volar.completion.preferredAttrNameCase": "camel",

  // CSS
  "css.validate": true,
  "scss.validate": true,

  // Typescript/Javascript
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.validate.enable": true,
  "javascript.suggest.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.suggestionActions.enabled": true,
  "tsserver.log": "verbose",
  "tsserver.maxTsServerMemory": 2048,
  "tsserver.disableAutomaticTypeAcquisition": false,
  "tsserver.useBatchedBufferSync": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.workspaceSymbols.scope": "currentProject"
}
